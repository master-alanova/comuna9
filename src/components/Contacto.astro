<section id="contacto" class="contacto">
    <div class="container">
        <h2>Visitanos en Mataderos</h2>

        <div class="contacto-grid">
            <div class="contacto-info">
                <div class="info-block">
                    <h3>Dirección</h3>
                    <p>
                        García de Cossio 6730<br />Mataderos, Buenos Aires<br
                        />Argentina
                    </p>
                </div>

                <div class="info-block">
                    <h3>Horarios</h3>
                    <p><strong>Lunes a Viernes:</strong> 16:00hs - 23:00hs</p>
                    <p><strong>Sábado y Domingo:</strong> 12:00hs - 23:00hs</p>
                </div>

                <div class="info-block">
                    <h3>Contacto</h3>
                    <p>WhatsApp: +54 9 11 5000-6010</p>
                    <p>Email: info@comuna9.ar</p>
                </div>
            </div>

            <div class="contacto-map">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3282.8753748583994!2d-58.517157!3d-34.668564!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcc8c0d5f2e0c1%3A0x1234567890abcdef!2sGarc%C3%ADa%20de%20Cossio%206730%2C%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1234567890123!5m2!1ses!2sar"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Ubicación de Comuna 9 en Mataderos"></iframe>
            </div>
        </div>
    </div>
</section>

<style>
    .contacto {
        background-color: var(--color-bg-light);
        padding: var(--spacing-xxl) 0;
    }

    .contacto h2 {
        text-align: center;
        font-size: clamp(2.5rem, 4vw, 4rem);
        font-weight: 300;
        margin-bottom: var(--spacing-xl);
        color: var(--color-primary);
    }

    .contacto-grid {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        gap: var(--spacing-xl);
        align-items: start;
    }

    .contacto-info {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-lg);
    }

    .info-block h3 {
        font-size: 1.5rem;
        font-weight: 400;
        margin-bottom: var(--spacing-sm);
        color: var(--color-accent);
    }

    .info-block p {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--color-text-secondary);
        margin-bottom: 0.5rem;
    }

    .info-block strong {
        color: var(--color-primary);
    }

    .contacto-map {
        height: 500px;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 968px) {
        .contacto {
            padding: var(--spacing-lg) 0;
        }

        .contacto-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-md);
        }

        .contacto-map {
            height: 350px;
        }
    }
</style>
